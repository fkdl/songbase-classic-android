<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#000000" 
  android:paddingTop="0dip">

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="0dip"
    android:background="#000000" >
    <LinearLayout
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="60dp"
      android:padding="0dp"
      android:layout_height="fill_parent"
      android:background="@drawable/border"
      android:id="@+id/menu_bits">
      <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top"
        android:padding="0dp"
        android:paddingBottom="50dp"
        android:onClick="showPopup"
        android:src="@drawable/tool"
        android:background="#000000"
      />
      <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top"
        android:padding="0dp"
        android:paddingBottom="50dp"
        android:src="@drawable/netok"
        android:background="#000000"
        android:id="@+id/net_indicator"
      />
      <View android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_weight="1" />
      <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top"
        android:padding="0dp"
        android:onClick="blankScreen"
        android:src="@drawable/blank"
        android:background="#000000"/>
      <View android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_weight="1" />
      <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top"
        android:padding="0dp"
        android:onClick="listAll"
        android:id="@+id/all_songs"
        android:src="@drawable/list"
        android:background="#000000"/>
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="top"
            android:padding="0dp"
            android:onClick="searchSongs"
            android:id="@+id/search_songs"
            android:src="@drawable/search"
            android:background="#000000"/>
      <View android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_weight="1" />
      <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:padding="0dp"
        android:onClick="pickSongs"
        android:src="@drawable/menu"
        android:background="#000000"/>
    </LinearLayout>
    <TextView
      android:layout_width="fill_parent"
      android:layout_weight="1"
      android:layout_height="fill_parent"
      android:gravity="center"
      android:text=""
      android:freezesText="true" 
      android:id="@+id/main_text"
      android:textColor="#FFFFFF"/>
    <LinearLayout
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="60dp"
      android:padding="0dp"
      android:layout_height="fill_parent"
      android:background="@drawable/border"
      android:id="@+id/song_shortcuts">
    </LinearLayout>
  </LinearLayout>
</LinearLayout>